@model Person

@{ ViewData["Title"] = "View";}

<section class="content">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Are you sure you want to delete this?</h3>
        </div>
        <div class="card-body">
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.Cpf)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.Cpf)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.Name)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.Name)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label> @Html.DisplayNameFor(model => model.Email)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="  @Html.DisplayFor(model => model.Email)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label> @Html.DisplayNameFor(model => model.IsEmployer)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder=" @Html.DisplayFor(model => model.IsEmployer)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.PostalCode)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.PostalCode)" disabled />
                </div>
            </div>
             <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.State)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder=" @Html.DisplayFor(model => model.State)" disabled />
                </div>
            </div>
             <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.City)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.City)" disabled />
                </div>
            </div>
             <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model =>  model.Address)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder=" @Html.DisplayFor(model =>  model.Address)" disabled />
                </div>
            </div>
             <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.HouseNumber)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder=" @Html.DisplayFor(model => model.HouseNumber)" disabled />
                </div>
            </div>
            <div align="center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Cpf" />
                    <input type="submit" value="Delete" class="btn bg-gradient-danger btn-sm col-2" />
                </form>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            @await Component.InvokeAsync("Form", new { formType = "Button", className = "btn bg-gradient-secondary btn-flat", action ="Index", functionName = "Back to List"})
        </div>
        <!-- /.card-footer-->
    </div>
</section>
