@model IEnumerable<PeoplePhoneViewModel>

@{ ViewData["Title"] = "Index";} 

@section StyleSheet{
<!-- DataTables -->
<link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

@await Component.InvokeAsync("Form", new {formType = "DivCardHead", thisModel = "People"})

<section class="content-header">
    <div class="container-fluid">
        @await Component.InvokeAsync("Form", new {formType = "Button", className = "btn bg-gradient-primary", action = "Create", functionName = "Create New"})
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-body">
            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                            <thead>
                                <tr>
                                    <th class="sorting sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">@Html.DisplayNameFor(model => model.Person.Cpf) </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.Name)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.Email)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Phones)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.IsEmployer)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.PostalCode)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.State)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.City) </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.Address)</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">@Html.DisplayNameFor(model => model.Person.HouseNumber)</th>
                                    <th aria-controls="table1" rowspan="1" colspan="1"> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="dtr-control sorting_1" tabindex="0">@Html.DisplayFor(modelItem => item.Person.Cpf)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Person.Name) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Person.Email) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Phones) </td>
                                        <td>@Html.DisplayFor(modelItem => Convert.ToBoolean(item.Person.IsEmployer))</td>
                                        <td> @Html.DisplayFor(modelItem => item.Person.PostalCode)</td>
                                        <td> @Html.DisplayFor(modelItem => item.Person.State)    </td>
                                        <td> @Html.DisplayFor(modelItem => item.Person.City) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Person.Address)   </td>
                                        <td>  @Html.DisplayFor(modelItem => item.Person.HouseNumber) </td>
                                        <td>@await Component.InvokeAsync("Form", new {formType = "ButtonGroup", routeid = Convert.ToString(item.Person.Cpf)})</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<!-- .Data table plugins -->
<script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="~/plugins/jszip/jszip.min.js"></script>
<script src="~/plugins/pdfmake/pdfmake.min.js"></script>
<script src="~/plugins/pdfmake/vfs_fonts.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
<script src="~/js/table.js"></script>
}