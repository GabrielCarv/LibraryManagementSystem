@model Book

@{
    ViewData["Title"] = "Delete";
}

<section class="content">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Are you sure you want to delete this?</h3>
        </div>
        <div class="card-body">
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.Title)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.Title)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model =>  model.Author)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model =>  model.Author)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.Price)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.Price)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model => model.Quantity)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.Quantity)" disabled />
                </div>
            </div>
            <div class="form-group col-12">
                <label>@Html.DisplayNameFor(model =>model.Publisher)</label>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="@Html.DisplayFor(model => model.Publisher.Name)" disabled />
                </div>
            </div>
            <div align="center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn bg-gradient-danger btn-sm col-2" />
                </form>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            @await Component.InvokeAsync("Form", new { formType = "Button", className = "btn bg-gradient-secondary btn-flat", action ="Index", functionName = "Back to List"})
        </div>
        <!-- /.card-footer-->
    </div>
</section>
